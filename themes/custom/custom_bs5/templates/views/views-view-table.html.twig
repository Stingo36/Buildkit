{#
/**
 * @file
 * Theme override for displaying a view as a modern enhanced table.
 * Handles both regular and grouped Views output.
 */
#}

{{ attach_library('custom_bs5/views_table') }}

{% set classes = [
  'views-table',
  'views-view-table',
  'custom-enhanced-table',
  'cols-' ~ header|length,
  responsive ? 'responsive-enabled',
] %}

{% if caption_needed %}
  <caption>
    {% if caption %}
      {{ caption }}
    {% else %}
      {{ title }}
    {% endif %}
    {% if summary_element is not empty %}
      {{ summary_element }}
    {% endif %}
  </caption>
{% endif %}

<div class="views-table-wrapper">
  <table{{ attributes.addClass(classes) }}>

    {# ---------- Header ---------- #}
    {% if header %}
      <thead>
        <tr>
          {% for key, column in header %}
            {% if column.default_classes %}
              {% set column_classes = ['views-field', 'views-field-' ~ fields[key]] %}
            {% endif %}
            <th{{ column.attributes.addClass(column_classes).setAttribute('scope', 'col') }}>
              {% if column.wrapper_element %}
                <{{ column.wrapper_element }}>
                  {% if column.url %}
                    <a href="{{ column.url }}" title="{{ column.title }}" rel="nofollow">
                      {{ column.content }}{{ column.sort_indicator }}
                    </a>
                  {% else %}
                    {{ column.content }}{{ column.sort_indicator }}
                  {% endif %}
                </{{ column.wrapper_element }}>
              {% else %}
                {% if column.url %}
                  <a href="{{ column.url }}" title="{{ column.title }}" rel="nofollow">
                    {{ column.content }}{{ column.sort_indicator }}
                  </a>
                {% else %}
                  {{ column.content }}{{ column.sort_indicator }}
                {% endif %}
              {% endif %}
            </th>
          {% endfor %}
        </tr>
      </thead>
    {% endif %}

    {# ---------- Body (supports grouped output) ---------- #}
    <tbody>
      {% for row in rows %}
        {% if row.group %}
          {# Grouped header row â€” add style class #}
          <tr class="views-group-header">
            <td colspan="{{ header|length }}">
              <span class="views-group-label">{{ row.group }}</span>
            </td>
          </tr>
        {% endif %}

        {# Normal data row #}
        {% if row.columns %}
          <tr{{ row.attributes }}>
            {% for key, column in row.columns %}
              {% if column.default_classes %}
                {% set column_classes = ['views-field'] %}
                {% for field in column.fields %}
                  {% set column_classes = column_classes|merge(['views-field-' ~ field]) %}
                {% endfor %}
              {% endif %}
              <td{{ column.attributes.addClass(column_classes).setAttribute('data-label', header[key].content|striptags) }}>
                {% if column.wrapper_element %}
                  <{{ column.wrapper_element }}>
                    {% for content in column.content %}
                      {% if content.label %}
                        <span class="views-label">{{ content.label|striptags|trim }}</span>
                      {% endif %}
                      {{ content.separator }}{{ content.field_output }}
                    {% endfor %}
                  </{{ column.wrapper_element }}>
                {% else %}
                  {% for content in column.content %}
                    {% if content.label %}
                      <span class="views-label">{{ content.label|striptags|trim }}</span>
                    {% endif %}
                    {{ content.separator }}{{ content.field_output }}
                  {% endfor %}
                {% endif %}
              </td>
            {% endfor %}
          </tr>
        {% endif %}
      {% endfor %}
    </tbody>
  </table>
</div>
    